<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.healmax.italk.Login.LoginActivity">

    <TextView
        android:id="@+id/login_id"
        android:text="@string/login_id"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login_id"
        android:layout_alignBottom="@+id/login_id" />

    <TextView
        android:id="@+id/login_pw"
        android:text="@string/login_name"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_id"
        android:layout_alignRight="@+id/login_id"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login_pw"
        android:layout_alignBottom="@+id/login_pw"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_alignRight="@+id/edit_name"
        android:text="@string/login"  />


    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_toLeftOf="@+id/btn_login"
        android:text="@string/register" />

</RelativeLayout>
