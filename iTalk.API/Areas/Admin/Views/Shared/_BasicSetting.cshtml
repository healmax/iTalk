@*使用 text/template 建立的 angularjs dialog 手動補上 jquery mobile class*@
<md-dialog class="ui-page-active" data-role="dialog">
    <md-toolbar data-role="header">
        <div class="md-toolbar-tools">
            <h3 flex>基本設定</h3>
            <md-button class="md-icon-button ui-btn" ng-click="cancel()">
                <span class="fa fa-times fa-lg"></span>
            </md-button>
        </div>
    </md-toolbar>
    <md-dialog-content class="md-dialog-content" data-role="content">
        <div layout-margin>
            <div layout>
                <img thumbnail="me.thumbnail" class="img-circle portrait-lg" />
                <div layout="column" layout-margin>
                    <p>@Resources.Name : <label ng-bind="me.alias"></label>
                    <p>@Resources.PersonalSign : <label ng-bind="me.personalSign || '尚未設定'"></label></p>
                    <p>ID : <label ng-bind="me.userName"></label></p>
                </div>
            </div>
            <div class="form-group">
                <label>語言設定</label>
                <select class="form-control" disabled>
                    <option>繁體中文</option>
                </select>
            </div>
            <div class="form-group">
                <label>字體大小</label>
                <select class="form-control" disabled>
                    <option>大</option>
                </select>
            </div>
            <br />
            <div class="form-inline" ng-class="{'pull-right':!isMobile()}">
                <button class="btn btn-default ui-btn" ng-click="cancel()">@Resources.Cancel</button>
                <button class="btn btn-primary ui-btn" disabled>儲存</button>
            </div>
        </div>
    </md-dialog-content>
    @*<div class="md-action" data-role="footer">
            <div layout-padding>
            </div>
        </div>*@
</md-dialog>
